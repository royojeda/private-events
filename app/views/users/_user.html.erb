<div id="<%= dom_id user %>">
  <h2>Created Events</h2>
  <% user.created_events.each do |created_event| %>
    <p>
      <strong>Name:</strong>
      <%= created_event.name %>
    </p>
  <% end %>

  <br><br>

  <h2>Attended Events</h2>

  <h3>Past Events</h3>
  <% user.attended_events.where("date < ?", Date.today).each do |past_event| %>
    <p>
      <strong>Name:</strong>
      <%= past_event.name %>
    </p>

    <p>
      <%= link_to "View", event_path(past_event) %>
    </p>
  <% end %>

  <br>

  <h3>Future Events</h3>
  <% user.attended_events.where("date >= ?", Date.today).each do |future_event| %>
    <p>
      <strong>Name:</strong>
      <%= future_event.name %>
    </p>

    <p>
      <%= link_to "View", event_path(future_event) %>
    </p>
  <% end %>
</div>
